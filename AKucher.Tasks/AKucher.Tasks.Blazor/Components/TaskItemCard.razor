<EditText Text="@TaskItem.Description" OnChanged="DescriptionChanged"></EditText>

@code {
    [Parameter]
    public TaskItem TaskItem { get; set; }

    [Parameter]
    public EventCallback ItemChanged { get; set; }

    private async Task DescriptionChanged(string val)
    {
        TaskItem.Description = val;

        await ItemChanged.InvokeAsync();
    }
}