<div class="card">
    <div class="card-body">
        <h3 class="card-title">@Task.Index</h3>
        <div class="card-text">
            @foreach (var item in Task.Items.OrderBy(x => x.Order).ToArray())
            {
                <TaskItemCard TaskItem="item"></TaskItemCard>
                <br />
            }
        </div>
        @* <a href="#" class="btn btn-primary">Go somewhere</a> *@
    </div>
</div>

@code {
    [Parameter]
    public TaskObject Task { get; set; }
}
